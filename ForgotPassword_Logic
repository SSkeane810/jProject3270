package transactionBroker;

import databaseInterface.UserData;

public class ForgotPassword_Logic {

	public static String getSecurityQuestion(String username) {
		String securityQuestion = UserData.getSecurityQuestion();
		return securityQuestion;
	}
	
	public static String getSecurityAnswer(String username, String securityAnswer) {
		String dbSecurityAnswer = UserData.getSecurityAnswer;
		String password = null;
		if (securityAnswer.equals(dbSecurityAnswer)) {
			password = UserData.getPassword(username);
			return password;
		} else {
			return null;
		}
	}
}
