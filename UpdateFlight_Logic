package transactionBroker;

import javax.swing.JTextField;

import databaseInterface.Flights;

public class UpdateFlight_Logic {
	
	public static boolean updateFlightNumber(JTextField flightNumberJT){
		String flightNumber = flightNumberJT.getText();
		return Flights.updateFlightNumber(flightNumber);
	}
	
	public static boolean updateDepartureDateTime(JTextField departureDateTimeJT){
		String departureDateTime = departureDateTimeJT.getText();
		return Flights.updateDepartureDateTime(departureDateTime);
	}
	
